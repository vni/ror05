<h1>Вход</h1>

<%= form_tag sessions_path do %>
  <div>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div>
    <%= label_tag :password, 'Пароль' %><br />
    <%= password_field_tag :password, nil %>
  </div>
  <div><%= submit_tag "Войти" %></div>
<% end %>
