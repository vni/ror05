<h2><%= params[:my] ? "Мои" : "Все" %> петиции</h2>

<table class="table">
  <thead>
    <tr>
      <th>Петиции</th>
      <th>Автор</th>
      <th>Голоса</th>
      <th>Дата создания</th>
    </tr>
  </thead>

  <% @petitions.each do |petition| %>
    <%= render 'petitions/petition', petition: petition %>
  <% end %>
</table>
